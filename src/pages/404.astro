---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import notFound from '../assets/notFound.jpg';

const title = 'Page Not Found';
// If you want Astro to generate a static 404.html in your build, uncomment the line below.
// export const prerender = true;
---

<Layout title={title}>
  <div class="hero bg-base-200 min-h-screen">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">404 - Page Not Found</h1>
        <p class="py-6">The page you're looking for doesn't seem to exist.</p>
        <Image
          height={500}
          src={notFound}
          alt="Page not found page."
          class="w-full h-auto rounded-xl shadow-md object-contain max-h-96"
        />
        <a href="/" class="btn btn-primary"><button class="btn btn-primary">Go back home</button></a>
      </div>
    </div>
  </div>
</Layout>
